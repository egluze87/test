<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.byethost5.egle.BeautyRoom.RegisterActivity">


    <LinearLayout
        android:id="@+id/login_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_welcome_text"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="serif"
            android:textStyle="bold"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_username"
            />

        <EditText
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/register_username_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_password"
            />

        <EditText
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/register_repeat_password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_repeat_password"
            />

        <EditText
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/register_password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <Button
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/register_register_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_register"
            />

    </LinearLayout>

</RelativeLayout>
